<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#383B6E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/menubutton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"

                        app:srcCompat="@drawable/menubutton" />

                    <ImageButton
                        android:id="@+id/usericon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"

                        android:layout_marginLeft="240dp"
                        android:layout_marginTop="20dp"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:text="Sports Library"
                    android:textColor="#FFFFFF"
                    android:textColorHighlight="#000000"
                    android:textSize="34sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/cricket"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="75dp"
                        android:background="@drawable/roundedcorners"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/cricket" />

                    <ImageButton
                        android:id="@+id/badminton"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="75dp"
                        android:background="@drawable/roundedcorners"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/badmint" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/CricketText"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:text="Cricket"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/BadmintonText"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingEnd="10dp"
                        android:text="Badminton"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/swimming"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="75dp"
                        android:background="@drawable/roundedcorners"
                        android:padding="2dp"

                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/swimming" />

                    <ImageButton
                        android:id="@+id/foorball"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="75dp"
                        android:background="@drawable/roundedcorners"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/football" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/SwimmingText"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="40dp"
                        android:text="Swimming"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/FootballText"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingEnd="10dp"
                        android:text="Football"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/tennist"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="75dp"
                        android:background="@drawable/roundedcorners"
                        android:padding="2dp"

                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/tennis" />

                    <ImageButton
                        android:id="@+id/hockey"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="75dp"
                        android:background="@drawable/roundedcorners"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/hockey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TennisText"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:text="Tennis"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/HockeyText"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingEnd="10dp"
                        android:text="Hockey"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/basketball"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="75dp"
                        android:background="@drawable/roundedcorners"
                        android:padding="2dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/basketball" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/BasketballText"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="80dp"

                        android:text="BasketBall"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>